}

.features .feature h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.features .feature p {
    font-size: 1rem;
}

footer {
    background-color: #2e7d32;
    color: white;
    text-align: center;
    padding: 20px 0;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideIn {
    from { transform: translateY(-20px); }
    to { transform: translateY(0); }
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

