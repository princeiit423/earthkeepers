}

header nav ul a {
    margin-left: 20px;
}

header nav ul  a {
    color: white;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
}

header nav ul a:hover {
    color: #a5d6a7;
}

.hero {
    background: url("/green.jpg");
